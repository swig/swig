# -----------------------------------------------------------------

javascript_clean:
	rm -rf build
	rm -f *_wrap* runme
	rm -f core @EXTRA_CLEAN@
	rm -f *.@OBJEXT@ *@JSSO@
	rm -f $(JS_INTERPRETER_SRC_DIR)/javascript



