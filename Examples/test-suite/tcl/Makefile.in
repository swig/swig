#######################################################################
# $Header$
# Makefile for tcl test-suite
#######################################################################

LANGUAGE     = tcl
#TCLSH        = valgrind tclsh
TCLSH        = tclsh
SCRIPTSUFFIX = _runme.tcl 
srcdir       = @srcdir@
top_srcdir   = @top_srcdir@
top_builddir = @top_builddir@

CPP_TEST_CASES += \
	primitive_types \
	li_attribute \
	li_cstring \
	li_cwstring \
	li_std_wstring

C_TEST_CASES += \
	li_cstring \
	li_cwstring

include $(srcdir)/../common.mk

# Overridden variables here
# none!

# Rules for the different types of tests
%.cpptest: 
	$(setup) \
	($(swig_and_compile_cpp); ) &&\
	$(run_testcase)

%.ctest:
	$(setup) \
	($(swig_and_compile_c); ) &&\
	$(run_testcase)

%.multicpptest: 
	$(setup) \
	($(swig_and_compile_multi_cpp); ) &&\
	$(run_testcase)

# Runs the testcase. A testcase is only run if
# a file is found which has _runme.tcl appended after the testcase name.
run_testcase = \
	if [ -f $(srcdir)/$(SCRIPTPREFIX)$*$(SCRIPTSUFFIX) ]; then (	  \
	  env LD_LIBRARY_PATH=.:$$LD_LIBRARY_PATH $(TCLSH) $(srcdir)/$(SCRIPTPREFIX)$*$(SCRIPTSUFFIX);) \
	fi;

# Clean
%.clean:

clean:
	$(MAKE) -f $(top_builddir)/$(EXAMPLES)/Makefile tcl_clean
